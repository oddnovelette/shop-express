<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <% include partials/nav %>
</nav>

<!-- Page Content -->
<div class="container">
<% include partials/breadcrumbs %>

    <div class="row">

        <div class="col-lg-3">
            <h1 class="my-4"><%=result[0].name%></h1>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            <% for(var i=0; i<result.length; i++){%>
            <div class="card mt-4">
                <img class="card-img-top img-fluid" src="/images/<%=result[i].categories.categories.image%>" alt="">
                <div class="card-body">
                    <h3 class="card-title"><%=result[i].categories.categories.page_title%></h3>
                    <p class="card-text"><%=result[i].categories.categories.page_description%></p>
                </div>
                <a href="<%=result[i].categories.categories.parent_category_id%>/<%=result[i].categories.categories.id%>" class="btn btn-primary">View products</a>
            </div>
            <%}%>
            <!-- /.card -->
        </div>
        <!-- /.col-lg-9 -->

    </div>

</div>
<!-- /.container -->

<% include partials/footer %>
</body>
</html>
