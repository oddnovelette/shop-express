<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <% include partials/nav %>
</nav>

<!-- Page Content -->
<div class="container">
    <% include partials/breadcrumbs %>

    <!-- Products -->
    <div class="row">
    <% for (var i=0; i<result.length; i++) {%>

        <div class="col-lg-2 img">
            <a href="<%=result[i]._id%>"></a>
                <img class="img rounded card-img-top" src="/images/<%=result[i].img%>" alt="">
        </div>

        <div class="col-lg-4 text">
            <h4><%=result[i].name%></h4><br>
            <p><%=result[i].short_description%></p>
            <div class="pricing">
                <span class="price">Price: <%=result[i].price%>- <%=result[i].currency%></span>
                    <a class="btn btn-primary float-right" href="<%=url%>/<%=result[i]._id%>">View Product</a>
            </div>
            <hr>
            <br><br>
        </div>
          <%}%>

    </div>

    <!-- /.row -->
    <br><br>

</div>
<!-- /.container -->

<% include partials/footer %>

</body>
</html>

