<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%=title%></title>

    <!-- Bootstrap core CSS -->
    <link href="stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="stylesheets/style.css" rel="stylesheet">

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/"><%=title%></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
              <% for(var i=0; i<nav.length; i++){%>
                <li class="nav-item"><a class="nav-link" href="<%=nav[i].Link%>"><%=nav[i].Text%></a></li>
              <%}%>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
        <nav class="breadcrumb">
          <li class="breadcrumb-item active" href="#">Home</li>
        </nav>
      </div>
    </div>

      <div class="row">
        <div class="col-lg-6 portfolio-item">
          <div class="card h-100">
            <div class="card-body">
              <h4 class="card-title">
                <h2><%=result[0].page_title%></h2>
              </h4><br>
              <p class="card-text"><%=result[0].page_description%></p>
            </div>
            <a href="<%=nav[0].Link%>" class="btn btn-primary">Discover</a>
          </div>
        </div>

        <div class="col-lg-6 portfolio-item">
          <div class="card h-100">
            <div class="card-body">
              <h4 class="card-title">
                <h2><%=result[1].page_title%></h2>
              </h4><br>
              <p class="card-text"><%=result[1].page_description%></p>
            </div>
            <a href="<%=nav[1].Link%>" class="btn btn-primary">Discover</a>
          </div>
        </div>
    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5">
      <div class="container">
        <p class="m-0 text-right">&copy; Copyright 2017 OSF Global Services</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="javascripts/jquery.min.js"></script>
    <script src="javascripts/popper.min.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
    </div>
  </body>

</html>
