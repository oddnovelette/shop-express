<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <% include ../partials/nav %>
</nav>

<!-- Login form -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5 col-sm-12"><br><br>
            <form id="form" class="form-horizontal" name="form" action="/users/forgot/" method="post">
                <h3>Reset your password</h3><br><br>
                <% if (error && error.length > 0) { %>
                <div class="alert alert-danger"><p><%= error %></p></div>
                <% } %>

                <% if (success && success.length > 0) { %>
                <div class="alert alert-success"><p><%= success %></p></div>
                <% } %>

                <h6>Enter your email</h6>
                <input type="text" name="email" class="form-control" placeholder="Email address" required autofocus><br>

                <input type="submit" class="btn btn-lg btn-block btn-primary" value="Send resetting email"/><br>

            </form>
        </div>
    </div>
</div> <!-- /container -->

<% include ../partials/footer %>

</body>
</html>
